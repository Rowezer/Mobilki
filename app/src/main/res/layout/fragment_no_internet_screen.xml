<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NoInternetScreen">

    <LinearLayout
        android:id="@+id/header_animal_failure"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/primary_color"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/tView_sad_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ˜ž"
        android:textSize="150sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tView_no_internet"
        app:layout_constraintTop_toBottomOf="@id/header_animal_failure"/>

    <TextView
        android:id="@+id/tView_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No\n internet connection"
        android:textSize="30sp"
        android:fontFamily="@font/fredoka"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/btn_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_btn"
        android:fontFamily="@font/fredoka"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="25dp"
        android:padding="15dp"
        android:text="Check again"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>